@model IEnumerable<DiagonsticTestManagement.Models.TestType>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h3>TestTypes</h3>
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Add New", "Create", "TestTypes", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-bordered">
            <thead class="bg-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.TypeName)</th>                   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => d.TypeName)</td>
                        
                        <td>
                            @Html.ActionLink("Edit", "Edit", "TestTypes", new { id = d.TestTypeId }, new { @class = "btn btn-secondary btn-sm" })
                            <a href="@Url.Action("Delete", "TestTypes", new {id=d.TestTypeId})" class="btn btn-danger btn-sm @(d.Tests.Count > 0 ? "disabled" :"")">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

